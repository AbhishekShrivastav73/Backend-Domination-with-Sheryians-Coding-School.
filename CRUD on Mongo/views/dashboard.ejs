<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        /* Custom CSS for micro-interactions */
        .card:hover {
            transform: scale(1.05);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body class="bg-gray-50 text-gray-800">

    <!-- Header / Navigation Bar -->
    <header class="bg-blue-600 text-white shadow-md">
        <nav class="container mx-auto p-4 flex justify-between items-center">
            <a href="#" class="text-2xl font-bold">UMS</a>
            <ul class="flex space-x-4">
                <li><a href="/" class="hover:underline">Home</a></li>
                <li><a href="#" class="hover:underline">Dashboard</a></li>
                <li><a href="#" class="hover:underline">Profile</a></li>
                <li><a href="#" class="hover:underline">Logout</a></li>
            </ul>
        </nav>
    </header>

    <!-- Dashboard Content -->
    <section class="container mx-auto py-12">
        <h2 class="text-3xl font-bold text-center mb-8">Dashboard</h2>

        <!-- User Statistics -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-8">
            <div class="card bg-white shadow-lg rounded-lg p-6 text-center transition-transform">
                <h3 class="text-xl font-semibold mb-2">Total Users</h3>
                <p class="text-3xl font-bold">1234</p>
            </div>
            <div class="card bg-white shadow-lg rounded-lg p-6 text-center transition-transform">
                <h3 class="text-xl font-semibold mb-2">Active Users</h3>
                <p class="text-3xl font-bold">567</p>
            </div>
            <div class="card bg-white shadow-lg rounded-lg p-6 text-center transition-transform">
                <h3 class="text-xl font-semibold mb-2">Admins</h3>
                <p class="text-3xl font-bold">10</p>
            </div>
            <div class="card bg-white shadow-lg rounded-lg p-6 text-center transition-transform">
                <h3 class="text-xl font-semibold mb-2">New Registrations</h3>
                <p class="text-3xl font-bold">23</p>
            </div>
        </div>

        <!-- Recent Activities -->
        <div class="bg-white shadow-lg rounded-lg p-6 mb-8">
            <h3 class="text-xl font-bold mb-4">Recent Activities</h3>
            <ul class="space-y-4">
                <li class="flex justify-between items-center">
                    <span>User John Doe logged in</span>
                    <span class="text-sm text-gray-500">5 minutes ago</span>
                </li>
                <li class="flex justify-between items-center">
                    <span>New user Jane Smith registered</span>
                    <span class="text-sm text-gray-500">10 minutes ago</span>
                </li>
                <li class="flex justify-between items-center">
                    <span>User Alice updated her profile</span>
                    <span class="text-sm text-gray-500">20 minutes ago</span>
                </li>
            </ul>
        </div>

        <!-- Graphical Representations -->
        <div class="bg-white shadow-lg rounded-lg p-6 mb-8">
            <h3 class="text-xl font-bold mb-4">User Registrations Over Time</h3>
            <img src="https://via.placeholder.com/600x300" alt="Graph showing user registrations over time" class="w-full">
        </div>

        <!-- User Management Actions -->
        <div class="bg-white shadow-lg rounded-lg p-6">
            <h3 class="text-xl font-bold mb-4">User Management Actions</h3>
            <div class="flex space-x-4">
                <a href="/createuser" class="btn bg-blue-600 text-white px-6 py-2 rounded-md font-semibold hover:bg-blue-700 transition">Add New User</a>
                <a href="/users" class="btn bg-green-600 text-white px-6 py-2 rounded-md font-semibold hover:bg-green-700 transition">View All Users</a>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-blue-600 text-white py-6">
        <div class="container mx-auto text-center">
            <p>Contact us at: contact@ums.com</p>
            <ul class="flex justify-center space-x-4 mt-4">
                <li><a href="#" class="hover:underline">Privacy Policy</a></li>
                <li><a href="#" class="hover:underline">Terms of Service</a></li>
            </ul>
        </div>
    </footer>

    <!-- Font Awesome for icons -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</body>
</html>
